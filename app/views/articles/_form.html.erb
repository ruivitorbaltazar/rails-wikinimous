<%= form_for @article do |f| %>
  <div class="form-group">
    <%= f.label :title %> <br>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content %> <br>
    <%= f.text_area :content, class: 'form-control', rows: 10 %>
  </div>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
